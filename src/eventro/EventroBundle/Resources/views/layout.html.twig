{% extends "TwigBundle::layout.html.twig" %}

{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
   <link rel="stylesheet" href="{{ asset('bundles/eventro_style/css/custom.css') }}" />
    
    
    
    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('bundles/eventro_style/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ asset('bundles/eventro_style/css/modern-business.css') }}" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{ asset('bundles/eventro_style/css/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    
     <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
