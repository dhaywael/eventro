{% extends 'eventroEventroBundle::layout.html.twig' %}

{% block content %}
    <h1>List des événements</h1>

        {% for entity in entities %}
            <div class="row">
            <div class="col-md-7">
                <a href="portfolio-item.html">
                    <img class="img-responsive img-hover" src="http://placehold.it/700x300" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3><a href="{{ path('events_show', { 'id': entity.id }) }}">{{ entity.label }}</a></h3>
                <h4>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</h4>
                <p>{{ entity.description }}</p>
                <a class="btn btn-primary" href="{{ path('events_show', { 'id': entity.id }) }}">Lire la Suite</i></a>
            </div>
            </div>
        {% endfor %}
       
    {% endblock %}
